{
  "$schema": "https://json.schemastore.org/jsconfig",
  "compilerOptions": {
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": false,
    "jsx": "preserve",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "types": [
      "naive-ui/volar"
    ],
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "**/*.vue",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.js",
    "dist",
    ".vite"
  ]
}
